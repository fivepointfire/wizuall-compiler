// Data setup
x = [1, 2, 3, 4, 5];
y = [2, 4, 6, 8, 10];

x_sorted = sort(x);
y_reversed = reverse(y);
y_avg = avg(y);
z = x + y;

// Visualization with all options
plot(x, y, title = "Line Plot", xlabel = "X Axis", ylabel = "Y Axis", color = "blue");

// Histogram with bins and color
histogram(y, title = "Histogram of y", bins = 5, color = "green");

// Pairwise comparison and running sum
diffs = pairwiseCompare(x);
cumsum = runningSum(y);

// Heatmap (requires 2D data)
matrix = [[1,2,3],[4,5,6],[7,8,9]];
heatmap(matrix, title = "Heatmap Example");

// Pie chart with labels and colors
values = [10, 20, 30];
labels = ["A", "B", "C"];
colors = ["red", "green", "blue"];
piechart(values, title = "Pie Example", labels = labels, colors = colors);

// For loop and if-else
for (i = 0; i < 3; i = i + 1) {
    x = x + 1;
    y = y + 2;
}

if (y_avg > 5) {
    plot(x, y, title = "y_avg > 5", color = "purple");
} else {
    plot(x, y, title = "y_avg <= 5", color = "orange");
}